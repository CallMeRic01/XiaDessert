<!-- Include Wappler dependencies and components -->
<!-- Wappler include head-page="layouts/main" appconnect="local" is="dmx-app" bootstrap5="local" fontawesome_5="cdn" components="{dmxBootstrap5Navigation:{},dmxValidator:{},dmxBootbox5:{},dmxBrowser:{},dmxBootstrap5Alert:{},dmxDataTraversal:{},dmxNotifications:{},dmxBootstrap5Modal:{},dmxBootstrap5TableGenerator:{}}" id="navbar" -->
<dmx-serverconnect id="conn_oneStaff" url="/api/security/users/viewStaff" noload="true"></dmx-serverconnect>

<div class="alert" id="alert1" is="dmx-bs5-alert" role="alert">
    <p>You are not authorized!</p>
</div>

<link rel="stylesheet" href="/css/style.css">

<header class="mb-4">
    <form id="clockInOut" method="post" action="/api/admin/employee/clockInOut" is="dmx-serverconnect-form" dmx-on:success="">
        <div class="modal" id="clockInOutModal" is="dmx-bs5-modal" tabindex="-1">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Clock In/Out</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="conn_employees.data.query" id="tableRepeat1">
                                    <tr>
                                        <td dmx-text="user_id"></td>
                                        <td dmx-text="user_firstName + ' ' + user_lastName"></td>
                                        <td>
                                            <!-- Clock In Button -->
                                            <button id="btnClockIn" class="btn btn-primary" dmx-show="!clockedIn.value" dmx-on:click="conn_clockInOut.load({action: 'clockIn', user_id: conn_oneStaff.data.query.user_id});clockedIn.setValue(true);clockInTime.setValue(currentTime.datetime);notifies1.success(conn_oneStaff.data.query.user_firstName+'Clocked in')" type="submit">Clock In</button>

                                            <!-- Clock Out Button and Timer -->
                                            <div dmx-show="clockedIn.value">
                                                <button id="btnClockOut" class="btn btn-danger" dmx-on:click="conn_clockInOut.load({action: 'clockOut', user_id: user_id});clockedIn.setValue(false)">Clock Out</button>
                                                <span dmx-text="(currentTime.datetime - clockInTime.value).formatDuration('hh:mm:ss')"></span>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm p-3 mb-5 bg-body rounded">
        <div class="container">
            <div is="dmx-browser" id="browser1"></div>
            <dmx-serverconnect id="conn_account" url="/api/registration/whoami"></dmx-serverconnect>
            <a class="navbar-brand" href="#">XiaDessert [{{conn_account.data.query.user_firstName}}]</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar1_collapse" aria-controls="navbar1_collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbar1_collapse">
                <div class="navbar-nav ms-auto">
                    <a class="nav-item nav-link active" href="/" id="HomePage">Home</a>
                    <a class="nav-item nav-link" href="/admin_dashboard" id="Dashboard_page">Dashboard</a>
                    <a class="nav-item nav-link" href="/admin_product" id="Product_list">Products</a>
                    <a class="nav-item nav-link" href="/admin_order" id="POS_page">POS</a>
                    <a class="nav-item nav-link" href="/admin_staffManagement" id="StaffManagement">Staff Management</a>
                    <a class="nav-item nav-link" dmx-on:click="clockInOut.clockInOutModal.show()">Clock In/Out</a>
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbar1_dropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Account
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbar1_dropdown">
                            <a class="dropdown-item" href="/login" dmx-show="conn_account.data.identity < 1">Login</a>
                            <a class="dropdown-item" dmx-on:click="run({'bootbox.confirm':{name:'logout',message:'Are you sure you want to logout',title:'Logout',buttons:{confirm:{label:'Logout'},cancel:{label:'Cancel',className:'btn-danger'}},then:{steps:[{serverConnect:{name:'sc',outputType:'object',url:'/api/registration/logout',site:'XiaD'}},{run:{name:'Logout',outputType:'text',action:browser1.goto(\'/admin_order\')}}]}}})" dmx-show="conn_account.data.identity > 0">Logout</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">My Account</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <dmx-serverconnect id="conn_employees" url="/api/admin/employee/list"></dmx-serverconnect>
    <dmx-serverconnect id="conn_clockInOut" url="/api/admin/employee/clockInOut" noload></dmx-serverconnect>
    <dmx-data-detail id="selectedEmployee" dmx-bind:data="conn_employees.data"></dmx-data-detail>
    <dmx-notifications id="notifies1"></dmx-notifications>
    <dmx-datetime id="currentTime"></dmx-datetime>
    <dmx-value id="clockedIn" dmx-bind:value="false"></dmx-value>
    <dmx-value id="clockInTime" dmx-bind:value=""></dmx-value>
</header>